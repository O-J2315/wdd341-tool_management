    "/power-tools": {
    "get": {
      "description": "Get all power tools",
      "responses": {
        "200": {
          "description": "List of power tools"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    },
    "post": {
      "description": "Create a new power tool",
      "parameters": [
        {
          "name": "body",
          "in": "body",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "example": "Milwaukee Band Saw" },
              "brand": { "type": "string", "example": "Milwaukee" },
              "condition": { "type": "string", "example": "fair" },
              "status": { "type": "string", "example": "assigned" },
              "notes": { "type": "string", "example": "Blade replaced March 2025" }
            }
          }
        }
      ],
      "responses": {
        "201": {
          "description": "Power tool created"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    }
  },
  "/power-tools/{id}": {
    "get": {
      "description": "Get a power tool by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "responses": {
        "200": {
          "description": "Power tool found"
        },
        "404": {
          "description": "Power tool not found"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    },
    "put": {
      "description": "Update a power tool by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        },
        {
          "name": "body",
          "in": "body",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "example": "Milwaukee Band Saw" },
              "brand": { "type": "string", "example": "Milwaukee" },
              "condition": { "type": "string", "example": "good" },
              "status": { "type": "string", "example": "available" },
              "notes": { "type": "string", "example": "Cleaned and ready for use" }
            }
          }
        }
      ],
      "responses": {
        "200": {
          "description": "Power tool updated"
        },
        "404": {
          "description": "Power tool not found"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    },
    "delete": {
      "description": "Delete a power tool by ID",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "type": "string"
        }
      ],
      "responses": {
        "200": {
          "description": "Power tool deleted"
        },
        "404": {
          "description": "Power tool not found"
        },
        "500": {
          "description": "Internal Server Error"
        }
      }
    }
  },
