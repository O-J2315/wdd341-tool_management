{
  "swagger": "2.0",
  "info": {
    "title": "Tool Management API",
    "description": "API documentation for managing hand and power tools",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/power-tools/": {
      "get": {
        "description": "List all power tools",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "description": "Create a new power tool",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "brand": { "type": "string" },
                "model": { "type": "string" },
                "serialNumber": { "type": "string" },
                "condition": { "type": "string" },
                "status": { "type": "string" },
                "notes": { "type": "string" },
                "lastServiced": { "type": "string", "format": "date" }
              }
            },
            "example": {
              "name": "Milwaukee Band Saw",
              "brand": "Milwaukee",
              "model": "M18-123X",
              "serialNumber": "SN12345678",
              "condition": "fair",
              "status": "assigned",
              "notes": "Blade replaced March 2025",
              "lastServiced": "2025-07-01"
            }
          }
        ],
        "responses": {
          "201": { "description": "Power tool successfully created" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/power-tools/{id}": {
      "get": {
        "description": "Get a power tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update a power tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "brand": { "type": "string" },
                "model": { "type": "string" },
                "serialNumber": { "type": "string" },
                "condition": { "type": "string" },
                "status": { "type": "string" },
                "notes": { "type": "string" },
                "lastServiced": { "type": "string", "format": "date" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Power tool updated" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a power tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/hand-tools/": {
      "get": {
        "description": "List all hand tools",
        "responses": {
          "200": { "description": "OK" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "post": {
        "description": "Create a new hand tool",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "brand": { "type": "string" },
                "size": { "type": "string" },
                "condition": { "type": "string" },
                "status": { "type": "string" },
                "notes": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Hand tool created" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/hand-tools/{id}": {
      "get": {
        "description": "Get a hand tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "OK" },
          "404": { "description": "Not Found" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "put": {
        "description": "Update a hand tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "brand": { "type": "string" },
                "size": { "type": "string" },
                "condition": { "type": "string" },
                "status": { "type": "string" },
                "notes": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Hand tool updated" },
          "400": { "description": "Bad Request" },
          "500": { "description": "Internal Server Error" }
        }
      },
      "delete": {
        "description": "Delete a hand tool by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": { "description": "Deleted" },
          "500": { "description": "Internal Server Error" }
        }
      }
    }
  }
}
